.record-wrapper
  .date-container
    .date
      .month {{getMonthName(fromDate)}}
      .day {{getDay(fromDate)}}
    .date#separator(*ngIf="toDate!=''")
      .day -
      .month
    .date
      .month {{getMonthName(toDate)}}
      .day {{getDay(toDate)}}
  .description-container
    h1 {{getTitle()}}

    ul
      .property
        li(translate key="events.distance") Távolság:
        a {{ distance }} km
      .property
        li(translate key="events.location") Helyszín:
        a( *ngIf="getLocation()==''") -
        a.url(target="_blank", rel="noopener noreferrer", [href]="'https://www.google.hu/maps/place/' + getLocation()") {{eventLocation}}
      .property
        li(translate key="events.web") Weboldal:
        a( *ngIf="description==''") -
        a.url(target="_blank", rel="noopener noreferrer", href="{{description}}", *ngIf="description!=''", translate key="events.click_here") Kattints ide!
